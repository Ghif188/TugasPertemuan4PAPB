<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="30dp">
    <TextView
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:text="Calculator App"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />
    <TextView
        android:id="@+id/operasi"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guide3"
        android:textSize="27dp"
        android:text="50x20"
        android:textAlignment="textEnd"/>
    <TextView
        android:id="@+id/hasil"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:textSize="50dp"
        android:textStyle="bold"
        android:text="1000"
        android:paddingBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/operasi"/>
    <View
        android:id="@+id/garis"
        android:layout_width="0"
        android:layout_height="5px"
        app:layout_constraintTop_toBottomOf="@id/hasil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/black"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/garis"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.25" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.75" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75" />
        <android.widget.Button
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_margin="20px"
            android:text="7"
            android:textSize="27dp"
            android:background="@drawable/bg_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guide4"
            app:layout_constraintEnd_toEndOf="@id/guide5"/>
        <android.widget.Button
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_margin="20px"
            android:text="8"
            android:textSize="27dp"
            android:background="@drawable/bg_button"
            app:layout_constraintStart_toStartOf="@id/guide5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guide4"
            app:layout_constraintEnd_toEndOf="@id/guide1"/>
        <android.widget.Button
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_margin="20px"
            android:text="9"
            android:textSize="27dp"
            android:background="@drawable/bg_button"
            app:layout_constraintStart_toStartOf="@id/guide1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guide4"
            app:layout_constraintEnd_toEndOf="@id/guide8"/>
        <android.widget.Button
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_margin="20px"
            android:text="+"
            android:textSize="27dp"
            android:background="@drawable/bg_button"
            app:layout_constraintStart_toStartOf="@id/guide8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guide4"
            app:layout_constraintEnd_toEndOf="parent"/>
        <android.widget.Button
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_margin="20px"
            android:text="4"
            android:textSize="27dp"
            android:background="@drawable/bg_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/guide4"
            app:layout_constraintBottom_toBottomOf="@id/guide6"
            app:layout_constraintEnd_toEndOf="@id/guide5"/>
        <android.widget.Button
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_margin="20px"
            android:text="5"
            android:textSize="27dp"
            android:background="@drawable/bg_button"
            app:layout_constraintStart_toStartOf="@id/guide5"
            app:layout_constraintTop_toTopOf="@id/guide4"
            app:layout_constraintBottom_toBottomOf="@id/guide6"
            app:layout_constraintEnd_toEndOf="@id/guide1"/>
        <android.widget.Button
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_margin="20px"
            android:text="6"
            android:textSize="27dp"
            android:background="@drawable/bg_button"
            app:layout_constraintStart_toStartOf="@id/guide1"
            app:layout_constraintTop_toTopOf="@id/guide4"
            app:layout_constraintBottom_toBottomOf="@id/guide6"
            app:layout_constraintEnd_toEndOf="@id/guide8"/>
        <android.widget.Button
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_margin="20px"
            android:text="-"
            android:textSize="27dp"
            android:background="@drawable/bg_button"
            app:layout_constraintStart_toStartOf="@id/guide8"
            app:layout_constraintTop_toTopOf="@id/guide4"
            app:layout_constraintBottom_toBottomOf="@id/guide6"
            app:layout_constraintEnd_toEndOf="parent"/>
        <android.widget.Button
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_margin="20px"
            android:text="1"
            android:textSize="27dp"
            android:background="@drawable/bg_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/guide6"
            app:layout_constraintBottom_toBottomOf="@id/guide7"
            app:layout_constraintEnd_toEndOf="@id/guide5"/>
        <android.widget.Button
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_margin="20px"
            android:text="2"
            android:textSize="27dp"
            android:background="@drawable/bg_button"
            app:layout_constraintStart_toStartOf="@id/guide5"
            app:layout_constraintTop_toTopOf="@id/guide6"
            app:layout_constraintBottom_toBottomOf="@id/guide7"
            app:layout_constraintEnd_toEndOf="@id/guide1"/>
        <android.widget.Button
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_margin="20px"
            android:text="3"
            android:textSize="27dp"
            android:background="@drawable/bg_button"
            app:layout_constraintStart_toStartOf="@id/guide1"
            app:layout_constraintTop_toTopOf="@id/guide6"
            app:layout_constraintBottom_toBottomOf="@id/guide7"
            app:layout_constraintEnd_toEndOf="@id/guide8"/>
        <android.widget.Button
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_margin="20px"
            android:text="/"
            android:textSize="27dp"
            android:background="@drawable/bg_button"
            app:layout_constraintStart_toStartOf="@id/guide8"
            app:layout_constraintTop_toTopOf="@id/guide6"
            app:layout_constraintBottom_toBottomOf="@id/guide7"
            app:layout_constraintEnd_toEndOf="parent"/>
        <android.widget.Button
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_margin="20px"
            android:text="0"
            android:textSize="27dp"
            android:background="@drawable/bg_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/guide7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guide1"/>
        <android.widget.Button
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_margin="20px"
            android:text="x"
            android:textSize="27dp"
            android:background="@drawable/bg_button"
            app:layout_constraintStart_toStartOf="@id/guide1"
            app:layout_constraintTop_toTopOf="@id/guide7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guide8"/>
        <android.widget.Button
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_margin="20px"
            android:text="="
            android:textSize="27dp"
            android:background="@drawable/bg_button"
            app:layout_constraintStart_toStartOf="@id/guide8"
            app:layout_constraintTop_toTopOf="@id/guide7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>